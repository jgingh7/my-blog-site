<%- include('partials/header'); -%>

<h1>Compose</h1>

<form action="/compose" method="post">
  <div class="form-group">
    <label for="compose-title">Title</label>
    <input type="text" class="form-control" name="composeTitle" id="compose-title">
  </div>

  <div class="form-group">
    <label for="compose-post">Post</label>
    <textarea class="form-control" name="composeContent" rows="8" id="compose-post"></textarea>
  </div>

  <button type="submit" class="btn btn-primary" name="publishBtn">Publish</button>
</form>

<%- include('partials/footer'); -%>

<%- include('partials/header'); -%>

<h1>Home</h1>

<p><%= homeStartingContent %></p>

<% posts.forEach(function(post) { %>
  <h2><%= post.title %></h2>
  <% var homeContent = post.content %>
  <% if (homeContent.length <= 100) { %>
    <p><%= homeContent %><a href="/posts/<%= post.title %>">Read More</a></p>
  <% } else { %>
  <% homeContent = homeContent.substring(0, 100) + " ..."; %>
    <p><%= homeContent %><a href="/posts/<%= post.title %>">Read More</a></p>
  <% } %>

<% }) %>


<%- include('partials/footer'); -%>
